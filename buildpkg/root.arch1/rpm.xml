<packages>

<package>
<files>aur/rpm-*.xz</files>
<pre_action>
# replace it in busybox.
if [ -f $ROOT/usr/bin/rpm2cpio ]; then rm $ROOT/usr/bin/rpm2cpio; fi
</pre_action>
<install>
bin/rpm
usr/bin/rpm2cpio
usr/lib/rpm/macros
#usr/lib/rpm/rpmrc
#@usr/lib/rpm/platform/*-linux
usr/lib/librpm*.so*
</install>
</package>

<package>
<files>extra/cpio-*.xz</files>
<pre_action>
# replace it in busybox.
if [ -f $ROOT/bin/cpio ]; then rm $ROOT/bin/cpio; fi
</pre_action>
<install>
bin/cpio
</install>
</package>

