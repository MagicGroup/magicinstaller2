echo "Mount proc filesystem:"
mount -n -t proc proc /proc

echo "Mount usb filesystem:"
mount -t usbdevfs usbdevfs /proc/bus/usb

#echo "Remount root filesystem in read-write mode:"
#mount -n -o remount,rw /

echo "Mount all filesystems:"
mount -a

echo "Make the required directories."
mkdir -p /tmpfs/dev
mkdir -p /tmpfs/tmp
mkdir -p /tmpfs/var/lib/xkb
mkdir -p /tmpfs/var/log
mkdir -p /tmpfs/var/run
mkdir -p /tmpfs/var/lock/rpm
